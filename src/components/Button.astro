---
export interface Props {
  href: string;
  label: string;
  external?: boolean;
  class?: string;
}

import styles from './Button.module.scss';

const { href, label, external = false, class: extraClass = '' } = Astro.props;
const rel = external ? 'noopener noreferrer' : undefined;
const target = external ? '_blank' : undefined;
---

<a href={href} class={`${styles.button} ${extraClass}`} rel={rel} target={target}>
  {label}
</a>
