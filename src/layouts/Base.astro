---
export interface Props {
  title?: string;
}
import "../styles/global.scss";
import Navbar from "../components/Navbar.astro";
import ProgressiveBlurTop from "../components/ProgressiveBlurTop.astro";
import Footer from "../components/Footer.astro";
import BootClient from "../components/BootClient.tsx";
const siteTitle = "Pablo Lamela - Portfolio";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Pablo Lamela - Portfolio</title>

    <!-- Inter font (Display via variable font) -->
    <link rel="preconnect" href="https://rsms.me" crossorigin>
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <meta
      name="description"
      content="Portfolio of Pablo Lamela, UX/UI Product Designer. Digital products, clear interfaces, and visual systems that turn ideas into meaningful impact."
    />
    <!-- Open Graph -->
    <meta property="og:title" content="Pablo Lamela" />
    <meta
      property="og:description"
      content="Portfolio of Pablo Lamela, UX/UI Product Designer. Digital products, clear interfaces, and visual systems that turn ideas into meaningful impact."
    />
    <!-- Primary OG image: animated GIF -->
    <meta property="og:image" content={`${import.meta.env.BASE_URL}og-image.gif`} />
    <meta property="og:image:type" content="image/gif" />
    <!-- Fallback OG image: static WEBP -->
    <meta property="og:image" content={`${import.meta.env.BASE_URL}og-image.webp`} />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pablo Lamela" />
    <meta
      name="twitter:description"
      content="Portfolio of Pablo Lamela, UX/UI Product Designer. Digital products, clear interfaces, and visual systems that turn ideas into meaningful impact."
    />
    <meta name="twitter:image" content={`${import.meta.env.BASE_URL}og-image.gif`} />
    <meta name="twitter:image:type" content="image/gif" />
    <!-- Optional alt text for accessibility -->
    <meta name="twitter:image:alt" content="Pablo Lamela - Portfolio Open Graph image" />

    <slot name="head" />
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://rsms.me; font-src 'self' https://rsms.me data:; img-src 'self' data: blob:; connect-src 'self'; media-src 'self' blob:; frame-src 'self'; worker-src 'self' blob:; base-uri 'self'; form-action 'self'">
  </head>
  <body>
    <Navbar currentPath={Astro.url.pathname} />
    <ProgressiveBlurTop />
    <slot />
    <Footer />
    <BootClient client:load />
  </body>
</html>
